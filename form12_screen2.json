{
  "$jason": {
    "head": {
      "title": "Form-12",
      "json_id": "field",
      "description": "Reagent Log Sheet",
      "offline": "true",
      "styles": {
        "center_align": {
          "align": "center"
        },
        "no_padding": {
          "padding": "0"
        },
        "black_color": {
          "color": "rgb(0,0,0)"
        },
        "label_styles": {
          "font": "HelveticaNeue-Bold"
        },
        "button_styles": {
          "width": "40%",
          "height": "50",
          "space": "15",
          "color": "rgb(255, 255, 255)",
          "background": "rgb(0, 102, 204)"
        },
        "table_row_odd_styles": {
          "background": "rgb(204,206,213)"
        },
        "table_row_even_styles": {
          "background": "rgb(231,232,235)"
        },
        "home_button_styles": {
          "color": "rgb(255, 255, 255)",
          "background": "rgb(51, 102, 153)",
          "width": "15%",
          "height": "7%",
          "corner_radius": "1%"
        },
        "next_button_styles": {
          "color": "rgb(255, 255, 255)",
          "background": "rgb(0, 102, 255)",
          "width": "15%",
          "height": "7%",
          "corner_radius": "1%"
        },
        "save_button_styles": {
          "color": "rgb(255, 255, 255)",
          "background": "rgb(51, 102, 153)",
          "width": "15%",
          "height": "7%",
          "corner_radius": "1%"
        },
        "dropdown_date_style": {
          "color": "rgb(0, 0, 0)",
          "border": "rgb(0, 0, 0)",
          "width": "7%",
          "height": "3%"
        },
        "right_padding": {
          "padding_left": "-2",
          "padding_right": "2"
        },
        "dropdown_shift_style": {
          "color": "rgb(0, 0, 0)",
          "border": "rgb(0, 0, 0)",
          "width": "20%",
          "height": "3%"
        },
        "dropdown_operator_style": {
          "color": "rgb(0, 0, 0)",
          "border": "rgb(0, 0, 0)",
          "width": "20%",
          "height": "3%"
        },
        "sign_style": {
          "height": "4%",
          "width": "20%",
          "size": "15"
        },
        "table_header_styles": {
          "size": "15",
          "font": "HelveticaHeader-Bold",
          "background": "rgb(14, 53, 112)",
          "color": "rgb(255, 255, 255)",
          "border": "#FFFFFF",
          "border_width": "2",
          "height":"5%"
        },
        "table_header_name_styles":{
          "width":"50%"
        },
        "header_style":{
          "border": "#FFFFFF",
          "border_width": "2",
          "background": "rgb(27,142,197)",
          "height": "12%",
          "align": "center",
          "color":"rgb(255,255,255)"
        },
        "header_style1":{
          "border": "#FFFFFF",
          "border_width": "2",
          "background": "rgb(14, 53, 112)",
          "height": "5%",
          "align": "center",
          "color":"rgb(255,255,255)"
        },
        "header_style2":{
          "border": "#FFFFFF",
          "border_width": "2",
          "background": "rgb(14, 53, 112)",
          "height": "5%",
          "align": "center",
          "color":"rgb(255,255,255)"
        },
        "header_textfield":{
          "border": "#FFFFFF",
          "border_width": "2",
          "background": "rgb(204,206,213)",
          "height": "5%",
          "color":"rgb(255,255,255)",
          "padding":0
        }
      },
      "actions": {
        "$load": {
          "type": "$global.set",
          "options": {
            "section_id": "form12_page1"
          },
          "success": {
            "type": "$render",
            "success": {
              "type": "$util.toast",
              "options": {
                "text": "Page loaded successfully",
                "type": "warning"
              }
            }
          }
        },
        "$show": {
          "type": "$render"
        },
        "$pull": {
          "type": "$flush",
          "success": {
            "type": "$reload",
            "success": {
              "type": "$util.toast",
              "options": {
                "text": "Page loaded successfully",
                "type": "warning"
              }
            }
          }
        },
        "handleSave": {
          "type": "$global.set",
          "options": {
            "section_id": "form7_page1",
            "f7_s1_sign": "{{$get.sign || ''}}",
            "f7_s1_day": "{{$get.day}}",
            "f7_s1_month": "{{$get.month}}",
            "f7_s1_year": "{{$get.year}}",
            "f7_s1_shift": "{{$get.shift}}",
            "f7_s1_operator": "{{$get.operator}}"
          },
          "success": {
            "type": "$util.toast",
            "options": {
              "text": "Saved Successfully",
              "type": "warning"
            }
          }
        }
      },
      "data": {
        "Page_Heading": "Reagents Log Sheet"
      },
      "templates": {
        "body": {
          "header": {
            "title": {
              "type": "label",
              "text": "{{Page_Heading}}",
              "align": "left"
            },
            "style": {
              "font": "HelveticaHeader-Bold",
              "size": 15,
              "background": "rgb(154,205,50)",
              "color": "rgb(255,255,255)",
              "height": "0%",
              "padding": "0",
              "align": "left"
            }
          },
          "sections": [
            {
              "type":"horizontal",
              "items":[{
                "type":"horizontal",
                "components":[{
                  "type":"label",
                  "text":"Comments",
                  "style":{
                    "background": "rgb(14, 53, 112)",
                    "width": "100%",
                    "height": "8%",
                    "color":"rgb(255,255,255)",
                    "padding":"0",
                    "font": "HelveticaNeue-Bold"
                  }
                }]
              }],
              "style":{
                "padding":"0"
              }
            },
            {
              "type": "horizontal",
              "items": [
                {
                  "type": "horizontal",
                  "class": "no_padding center_align",
                  "style": {
                    "padding_top": "1%",
                    "padding_bottom": "1%"
                  },
                  "components": [
                    {
                      "type": "space",
                      "style": {
                        "width": "20%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "previous",
                      "text": "Previous",
                      "class": "next_button_styles center_align",
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "https://sandhiyaviswanathan.github.io/form12_screen1.json",
                          "preload": {
                            "style": {
                              "background": "#ff0000"
                            },
                            "layers": [
                              {
                                "type": "image",
                                "url": "file://infinit.gif",
                                "style": {
                                  "top": "50%-25",
                                  "left": "50%-25",
                                  "width": "50",
                                  "height": "50"
                                }
                              }
                            ]
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "5%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "home",
                      "text": "Home",
                      "class": "home_button_styles center_align",
                      "action": {
                        "type": "$href",
                        "options": {
                          "url": "https://sandhiyaviswanathan.github.io/form12_screen1.json",
                          "preload": {
                            "style": {
                              "background": "#ff0000"
                            },
                            "layers": [
                              {
                                "type": "image",
                                "url": "file://infinit.gif",
                                "style": {
                                  "top": "50%-25",
                                  "left": "50%-25",
                                  "width": "50",
                                  "height": "50"
                                }
                              }
                            ]
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "5%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "save",
                      "text": "Save",
                      "class": "save_button_styles center_align",
                      "action": {
                        "trigger": "handleSave"
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "5%"
                      }
                    },
                    {
                      "type": "button",
                      "name": "submit",
                      "text": "submit",
                      "class": "center_align submit_button_styles",
                      "contentDescription": "submit",
                      "action": {
                        "type": "$global.reset",
                        "options": {
                          "save": "true",
                          "filename": "Lead_Nitrate_Checklist"
                        },
                        "success": {
                          "type": "$global.reset",
                          "options": {
                            "items": [
                              "section_id",
                              "f7_s1_sign",
                              "f7_s1_day",
                              "f7_s1_month",
                              "f7_s1_year",
                              "f7_s1_shift",
                              "f7_s1_operator"
                            ]
                          },
                          "success": {
                            "type": "$util.toast",
                            "options": {
                              "text": "Data Submitted successfully",
                              "type": "warning"
                            }
                          }
                        }
                      }
                    },
                    {
                      "type": "space",
                      "style": {
                        "width": "5%"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}